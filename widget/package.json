{
  "name": "annotated-feedback-widget",
  "version": "0.1.1",
  "description": "Universal feedback widget with visual annotation support",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build:styles": "node scripts/build-styles.mjs",
    "build": "tsup src/index.ts --format cjs,esm --dts --clean && pnpm build:styles",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch --onSuccess \"pnpm build:styles\"",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "feedback",
    "widget",
    "annotation",
    "screenshot",
    "convex",
    "excalidraw"
  ],
  "author": "Annotated Feedback Maintainers",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@excalidraw/excalidraw": "^0.18.0",
    "convex": "^1.25.4",
    "html-to-image": "^1.11.11"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "tsup": "^8.0.0",
    "typescript": "^5",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/screwyforcepush/annotated-feedback"
  },
  "bugs": {
    "url": "https://github.com/screwyforcepush/annotated-feedback/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
